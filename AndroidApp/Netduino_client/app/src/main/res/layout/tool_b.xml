<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"

    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/sendb">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5.25">


        </GridLayout>

        <ImageView
            android:layout_width="2607dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"

            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_weight="2.50" />
    </LinearLayout>

    <Button
        android:id="@+id/sendb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Send"
        android:clickable="false"


        android:layout_marginTop="41dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/emailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:hint="Email"
        android:textColorHint="#bbbbbb"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <EditText
        android:id="@+id/subjected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:hint="Subject"
        android:textColorHint="#bbbbbb"
        android:layout_below="@+id/emailed"
        android:layout_alignLeft="@+id/emailed"
        android:layout_alignStart="@+id/emailed"
        />

    <EditText
        android:id="@+id/messageet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:hint="Message"
        android:textColorHint="#bbbbbb"

        android:layout_weight="1.90"
        android:layout_below="@+id/subjected"
        android:layout_alignLeft="@+id/subjected"
        android:layout_alignStart="@+id/subjected" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Email"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_alignTop="@+id/emailed"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_above="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Subject"
        android:id="@+id/textView3"
        android:gravity="center"
        android:layout_below="@+id/emailed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Message"
        android:id="@+id/textView5"
        android:gravity="center"
        android:layout_below="@+id/subjected"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/messageet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Attachements"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Attachments"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="19dp" />

</RelativeLayout>