<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"

    android:background="#000000"
    >


    <Button
        android:id="@+id/sendsend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Send"
        android:textColor="#ffffff"
        android:clickable="false"
        android:background="@drawable/black_button"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/sendemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:hint="Email"
        android:textColorHint="#bbbbbb"
        android:drawableRight="@drawable/ic_action_user"
        android:layout_above="@+id/sendsubject"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/sendsubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_action_edit"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:hint="Subject"
        android:textColorHint="#bbbbbb"
        android:layout_above="@+id/sendmessage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/sendmessage"
        android:drawableRight="@drawable/ic_action_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:hint="Message"
        android:textColorHint="#bbbbbb"

        android:layout_weight="1.90"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/sendattachments"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sendmessage"
        android:layout_above="@+id/sendsend"
        android:layout_alignRight="@+id/sendmessage"
        android:layout_alignEnd="@+id/sendmessage"
        android:textColor="#ffffff" />


</RelativeLayout>