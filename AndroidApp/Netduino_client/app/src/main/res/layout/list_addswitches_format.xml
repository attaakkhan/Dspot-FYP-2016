<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <TextView
        android:id="@+id/titlelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/list_sw_name_tv"
        android:layout_alignBottom="@+id/list_sw_name_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/listswname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/titlelabel"
        android:textColor="#ffffff"/>



    <TextView
        android:id="@+id/idlabel"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pin"
        android:layout_alignBaseline="@+id/list_sw_pin_tv"
        android:layout_alignBottom="@+id/list_sw_pin_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/list_sw_name_tv"
        android:layout_below="@+id/flag"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:layout_toRightOf="@+id/listswname"
        android:layout_toEndOf="@+id/listswname"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/list_sw_pin_tv"
        android:layout_alignLeft="@+id/list_sw_name_tv"
        android:layout_alignStart="@+id/list_sw_name_tv"
        android:layout_below="@+id/list_sw_name_tv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff" />

</RelativeLayout>